package com.tgroup.teste.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.tgroup.teste.entity.Customer;
import com.tgroup.teste.entity.dto.CustomerDTO;
import com.tgroup.teste.exception.ObjectNotFoundException;
import com.tgroup.teste.repository.CustomerRepository;

@Service
public class CustomerService {
	
    @Autowired
    private CustomerRepository repository;
    
    public Customer create(CustomerDTO customerDTO) {
    	Customer customer = new Customer(customerDTO.getName(), customerDTO.getEmail(), customerDTO.getDocument(), customerDTO.getBirthDate(), customerDTO.getPhone(), customerDTO.getAddresses(), customerDTO.getDeleted());
    	
    	return repository.save(customer);
    }
    
    public Customer findById(Integer id) {
    	Customer customer = repository.findById(id).orElseThrow(() -> new ObjectNotFoundException("Customer not found. Id: " + id));
    	if (customer.getDeleted() == true) {
    		throw new ObjectNotFoundException("Customer deleted. Id: " + id);
    	}
    	return customer;
    }
    
    public List<Customer> findAll() {
    	return repository.findAll();
    }

}
